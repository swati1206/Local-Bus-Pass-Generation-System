@model LocalBusPassWebApi.Model.AuthModel
<section class="vh-100" style="background-image: url('https://media.istockphoto.com/photos/chhatrapati-shivaji-picture-id667564382?k=20&m=667564382&s=612x612&w=0&h=CmUbMKkhjFdq09GWI6nrlmy-thQDmEF-EcY1djvyqFM='); background-repeat: no-repeat; background-position: center; background-size: cover; ">
    <form action="adminhome" method="post">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            @if (ViewBag.Error != null)
                            {
                            <div class="alert alert-dark">@ViewBag.Error</div>
                            }

                            <h3 class="mb-5">Sign in</h3>

                            <div class="form-outline mb-4">
                                <label for="Username" class="control-label">Email</label>
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control form-control-lg" })
                            </div>

                            <div class="form-outline mb-4">

                                @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg" })
                            </div>


                            <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
                            <p>Admin Registration <a href="/registration/Admin" class="link-info">Register here</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>
