@model LocalBussPassLibrary.Entities.Passenger
    | <a href="/logout">Logout</a>
<section class="vh-100" style="background-image: url('https://media.istockphoto.com/photos/chhatrapati-shivaji-picture-id667564382?k=20&m=667564382&s=612x612&w=0&h=CmUbMKkhjFdq09GWI6nrlmy-thQDmEF-EcY1djvyqFM='); background-repeat: no-repeat; background-position: center; background-size: cover; ">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <div>
                            <form action="/adminhome/viewprofile" method="post">
                                @if (ViewBag.Error != null)
                                {
                                    <div class="alert alert-dark">@ViewBag.Error</div>
                                }
                                <div class="form-outline mb-4">
                                    <label for="Username" class="control-label">Enter Passenger Id</label>
                                    @Html.TextBoxFor(m => m.PassengerId, new { @class = "form-control form-control-lg" })
                                </div>
                                <button class="btn btn-primary btn-lg btn-block" type="submit">Submit</button>
                            </form>
                        </div>
                        <div>
                            @if (Model != null)
                            {
                                <h3 class="mb-5">Passenger Profile</h3>
                                <div class="table-scroll">
                                    <table>
                                        <tbody>
                                            <tr>
                                                <th scope="row">Passenger ID </th>
                                                <td>  @Model.PassengerId</td>
                                            </tr>

                                            <tr>
                                                <th scope="row"> Name </th>
                                                <td>@Model.Name</td>
                                            </tr>

                                            <tr>
                                                <th scope="row">Email </th>
                                                <td>@Model.Email</td>
                                            </tr>

                                            <tr>
                                                <th scope="row">Address </th>
                                                <td>@Model.Address</td>
                                            </tr>

                                            <tr>
                                                <th scope="row">Age </th>
                                                <td>@Model.Age</td>
                                            </tr>

                                            <tr>
                                                <th scope="row">Gender </th>
                                                <td>@Model.Gender</td>
                                            </tr>

                                            <tr>
                                                <th scope="row">AadharId </th>
                                                <td>@Model.AadharId</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            }
                        </div>
                        <div class="form-outline mb-4">
                            <a href="/adminhome">Return to Admin Home</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
