@model LocalBusPassWebApi.Model.AuthModel
<section class="vh-100" style="background-image: url('https://c4.wallpaperflare.com/wallpaper/674/583/654/blurred-background-bus-combi-miniature-wallpaper-preview.jpg'); background-repeat: no-repeat; background-position: center; background-size: cover; ">
    <form action="/userlogin" method="post">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-left align-items-left h-100">
                <br /><br /><br />
                <h1 style="text-align:center;color:white"> <mark>Local Bus Pass Generation System</mark><br /><br /><p style="font-size:28px; color:greenyellow">  We're going your way-daily!<br />The better way <br />to get from Here to There!</p></h1>
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            @if (ViewBag.Error != null)
                            {
                <div class="alert alert-dark">@ViewBag.Error</div>}

                            <h3 class="mb-5">Sign in</h3>

                            <div class="form-outline mb-4">
                                <label for="Username" class="control-label">Aadhar Number</label>
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control form-control-lg" })
                            </div>

                            <div class="form-outline mb-4">

                                @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg" })
                            </div>


                            <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
                            <p>Don't have an account? <a href="/registration/passenger" class="link-info">Register here</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>